{
    "name": "brian_kaseleko/azampay_app",
    "description": "Laravel Azampay App",
    "type": "project",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^12.0",
        "guzzlehttp/guzzle": "^7.5",
        "spatie/laravel-package-tools": "^1.16",
        "briankaseleko/laravel-azampay": "dev-main"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/BrianKaseleko/laravel-azampay"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Alphaolomi\\Azampay\\": "vendor/briankaseleko/laravel-azampay/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Alphaolomi\\Azampay\\Tests\\": "vendor/briankaseleko/laravel-azampay/tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Alphaolomi\\Azampay\\AzampayServiceProvider"
            ],
            "aliases": {
                "Azampay": "Alphaolomi\\Azampay\\Facades\\Azampay"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
